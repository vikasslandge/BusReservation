<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
@{
    ViewBag.Title = "Index";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

<style>
    .side {
        height: 300px;
        overflow: hidden;
        position: fixed;
        margin-top: 100px;
        margin-left: 20px;
    }

    a {
        font-size: large;
        color: black;
        padding-left: 70px;
    }

        a:hover {
            text-decoration-line: none;
            color: dimgray;
        }

    ul {
        display: block;
        list-style-type: none;
    }
    hr {
        border-top: 2px solid #333;
    }
</style>


<div class="row">
    <div class="col-md-3" style="background-color:whitesmoke;margin:30px 0;">
        <ul style="margin-top:20px">
            <li>
                @Ajax.ActionLink("Add Provider Details", "AddProvider", new AjaxOptions {
               HttpMethod="GET",
               InsertionMode=InsertionMode.Replace,
               UpdateTargetId= "information"
           })
            </li>
            <hr />
            <li>
                @Ajax.ActionLink("Provider's List ", "ProviderDetails", new AjaxOptions {
               HttpMethod="GET",
               InsertionMode=InsertionMode.Replace,
               UpdateTargetId= "information"
           })
            </li>
            <hr />
            <li>
                @Ajax.ActionLink("Add Offer Details", "AddOffer", new AjaxOptions
           {
               HttpMethod = "GET",
               InsertionMode = InsertionMode.Replace,
               UpdateTargetId = "information"
           })
            </li>
            <hr />
            <li>
                @Ajax.ActionLink("Offer's List ", "OfferDetails", new AjaxOptions {
               HttpMethod="GET",
               InsertionMode=InsertionMode.Replace,
               UpdateTargetId= "information"
           })
            </li>
        </ul>
    </div>
    <div class="col-md-5" id="information"><h2 class="text-center text-uppercase">Administrator Operations</h2></div>
</div>

