<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
@model BusReservation.Models.ProviderDetails

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<style>
    .labelTitle {
        margin-left: 150px;
        font-size: 15px;
    }

    .forminput {
        display: block;
        width: 60%;
        height: 34px;
        padding: 10px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-left: 150px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-center text-uppercase">Update Provider Details</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProviderId)

        <div class="form-group">
            <label class="labelTitle" for="name"><span class=" glyphicon glyphicon-flag"></span>Organization Name</label>
            @Html.EditorFor(model => model.OrganisationName, new { htmlAttributes = new { @class = "forminput" } })
            @Html.ValidationMessageFor(model => model.OrganisationName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="labelTitle" for="number"><span class="glyphicon glyphicon-phone"></span>Mobile Number</label>
            @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "forminput" } })
            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update Provider" class="btn btn-success" style="margin-left:150px;width:150px;height:38px" />
            </div>
        </div>
    </div>
}

